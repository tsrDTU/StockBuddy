<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TradingFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

    <!-- Toolbar for the menu bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp" style="@style/groupStylewhite_A700">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnmenu"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearContents"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="19dp"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMenu"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="@dimen/_18pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_menu"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_menu"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTitle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.63"
                    android:layout_width="0dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="Trading"
                    style="@style/txtRobotomedium20"
                    tools:text="Trading"/>
                <ImageView android:id="@+id/imageUser"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_user"/>
                <ImageView android:id="@+id/imageNotification"
                    android:layout_height="19dp"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_notification"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_notification"/>
                <ImageView android:id="@+id/imageSearch"
                    android:layout_height="@dimen/_17pxh"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="@dimen/_3pxh"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="@dimen/_17pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_search"/>
            </LinearLayout>
            <View android:background="@color/black_900"
                android:id="@+id/lineBorderbottom"
                android:layout_gravity="start"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_width="360dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnbuysell"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        style="@style/groupStylecornerRadius_3">
    <androidx.appcompat.widget.AppCompatButton
        android:ellipsize="end" android:gravity="center"
        android:id="@+id/btnBuysell"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="@dimen/_4pxh"
        android:paddingBottom="14dp"
        android:paddingEnd="@dimen/_30pxh"
        android:paddingStart="@dimen/_30pxh"
        android:paddingTop="14dp"
        android:singleLine="true"
        android:textAllCaps="false"
        android:text="buy or sell"
        style="@style/btnSolidRounded_4" tools:text="buy or sell"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/StockBackground1"
            style="dpgroupStylebluegray_100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/stockBackground"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="241dp">

            <TextView
                android:id="@+id/StockText1"
                style="txtRobotomedium20_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="28dp"
                android:layout_weight="0.5"
                android:ellipsize="end"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4dp"
                android:singleLine="true"
                android:text="Stock Name"
                tools:text="StockName" />

            <LinearLayout
                android:id="@+id/StockDiff1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="28dp"
                android:layout_weight="0.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Percent1"
                    style="dptxtRobotomedium20_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="0.76"
                    android:ellipsize="end"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="4dp"
                    android:singleLine="true"
                    android:text="price"
                    tools:text="price" />

                <ImageView
                    android:id="@+id/imageColor1"
                    android:layout_width="17dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="3dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_color_yellow_600"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_color_yellow_600"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnacceptPurchaseOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylecornerRadius_3">
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnAcceptPurchaseOne"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:paddingBottom="14dp"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="14dp"
                android:singleLine="true"
                android:textAllCaps="false"
                style="@style/btnSolidRounded_4_2"
                android:text="Accept Purchase"
                tools:text="Accept Purchase"/>
        </LinearLayout>


</LinearLayout>
    </LinearLayout>


</FrameLayout>
