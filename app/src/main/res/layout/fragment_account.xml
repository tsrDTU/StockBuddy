<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="0dp"
        android:text="next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

    <!-- Toolbar for the menu bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:contentInsetStart="0dp" style="@style/groupStylewhite_A700">
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnmenu"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearContents"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="19dp"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageMenu"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="@dimen/_18pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_menu"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_menu"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtTitle"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.63"
                    android:layout_width="0dp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="@dimen/_4pxh"
                    android:singleLine="true"
                    android:text="Account"
                    style="@style/txtRobotomedium20"
                    tools:text="Account"/>
                <ImageView android:id="@+id/imageUser"
                    android:layout_height="@dimen/_20pxh"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_20pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_user"/>
                <ImageView android:id="@+id/imageNotification"
                    android:layout_height="19dp"
                    android:layout_marginBottom="@dimen/_3pxv"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="@dimen/_16pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_notification"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_notification"/>
                <ImageView android:id="@+id/imageSearch"
                    android:layout_height="@dimen/_17pxh"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="@dimen/_3pxh"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="@dimen/_17pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_search"/>
            </LinearLayout>
            <View android:background="@color/black_900"
                android:id="@+id/lineBorderbottom"
                android:layout_gravity="start"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:layout_width="360dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearColumnellipseone"
        style="@style/groupStyleindigo_900cornerRadius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageEllipseOne"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_ellipse1"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_ellipse1" />
    </LinearLayout>

        <!-- Name Title -->
        <TextView android:id="@+id/txtNameLastName"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:singleLine="true"
            android:text="Name LastName"
            tools:text="Name_Lastname"/>

        <!-- Box1 -->
        <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumntradingHistoryOne"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylecornerRadius_2">
        <androidx.appcompat.widget.AppCompatButton
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/btnTradingHistoryOne"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="@dimen/_4pxh"
            android:paddingHorizontal="@dimen/_30pxh"
            android:paddingVertical="@dimen/_30pxv"
            android:singleLine="true"
            android:text="Settings"
            android:textAllCaps="false"
            tools:text="Settings"
            style="@style/btnSolidRounded_3"
            />
    </LinearLayout>

        <!-- Box2 -->
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumntradingHistoryOne2"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylecornerRadius_2">
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/btnTradingHistoryOne2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:paddingHorizontal="@dimen/_30pxh"
                android:paddingVertical="@dimen/_30pxv"
                android:singleLine="true"
                android:text="History"
                android:textAllCaps="false"
                tools:text="History"
                style="@style/btnSolidRounded_3"
                />
        </LinearLayout>

        <!-- Box3 -->
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumntradingHistoryOne3"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylecornerRadius_2">
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/btnTradingHistoryOne3"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="@dimen/_4pxh"
                android:paddingHorizontal="@dimen/_30pxh"
                android:paddingVertical="@dimen/_30pxv"
                android:singleLine="true"
                android:text="Puppy Attack"
                android:textAllCaps="false"
                tools:text="Puppy Attack"
                style="@style/btnSolidRounded_3"
                />
        </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</FrameLayout>